+
+  //Set CharSequence
+  const int MAX_COMBINING_CHARS = 5;
+  ushort u_char_combind[MAX_COMBINING_CHARS];
+
+  if (w == 0 && cuX > 0 && QChar::category(c) == QChar::Mark_NonSpacing) {
